<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <!-- se consideran todas las peticiones -->
        <from-view-id>*</from-view-id>
         <navigation-case>
            <from-outcome>logueadoadmin</from-outcome>
            <to-view-id>Principal.xhtml</to-view-id>
        </navigation-case>
         <navigation-case>
            <from-outcome>sinlogueo</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>principal</from-outcome>
            <to-view-id>Principal.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>abmoperarios</from-outcome>
            <to-view-id>ABMOperarios.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>EditarOperarios</from-outcome>
            <to-view-id>EditarOperarios.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ErrorOperarios</from-outcome>
            <to-view-id>ErrorOperarios.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>user</managed-bean-name>
        <managed-bean-class>Controladoras.ControlOperarios</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
</faces-config>
